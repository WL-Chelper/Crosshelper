<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Crosshelper.Views.DescribeProblemPage">
    <NavigationPage.TitleView>
        <Grid>
            <Button Text="Cancel" TextColor="White" HorizontalOptions="End" FontSize="17" Clicked="Handle_Canceled"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
                 <ScrollView>
                 <StackLayout Padding="20">
                    <!-- Case detial -->
                    <Label Text="Describe your problem here!" FontSize="Medium" TextColor="#FF4E18" FontAttributes="Bold" Margin="0,5,0,0"></Label>
                    <BoxView BackgroundColor="#999999" HeightRequest="1.5"></BoxView>
                            <StackLayout 
                                     VerticalOptions="FillAndExpand" 
                                     BackgroundColor="#F4F4F4">
                            <StackLayout BackgroundColor="White" VerticalOptions="FillAndExpand">
                                        <StackLayout>
                                            <StackLayout >
                                              <Label Text="Current location" TextColor="#666666" FontSize="16" FontAttributes="Bold"></Label>
                                            </StackLayout>
                                                <Button Text="Mountain view" BorderColor="#999999" 
                                                        BorderRadius="5" BackgroundColor="White" 
                                                        TextColor="#666666" BorderWidth="1" FontAttributes="Bold" 
                                                        FontSize="16"
                                                        HeightRequest="45"
                                                        Clicked="Handle_Location"></Button>
                                            <StackLayout >
                                              <Label Text="Language Preference" TextColor="#666666" FontSize="16" FontAttributes="Bold"></Label>
                                            </StackLayout>
                                                <Picker HeightRequest="45" />
                                                <Button Text="Chinese" BorderColor="#999999" 
                                                        BorderRadius="5" BackgroundColor="White" 
                                                        TextColor="#666666" BorderWidth="1" FontAttributes="Bold" 
                                                        FontSize="16"
                                                        HeightRequest="45"
                                                        Clicked="Handle_Language"></Button>
                                            </StackLayout>
                            <StackLayout>
                            <StackLayout>
                                <Label Text="Is emergency problem?" TextColor="Gray" FontSize="Default" FontAttributes="Bold"></Label>
                                <StackLayout Orientation="Horizontal">
                                    <Button Text="No really" BorderColor="#FF4E18" 
                                                        WidthRequest="85"
                                                        BorderRadius="5" BackgroundColor="#FF4E18" 
                                                        TextColor="White" BorderWidth="1" FontAttributes="Bold" 
                                                        FontSize="Small"
                                                        Clicked="Handle_NotReally"></Button>
                                    <Button Text="Yes" BorderColor="#FF4E18" 
                                                        WidthRequest="85"
                                                        Margin="5,0,0,0"
                                                        BorderRadius="5" BackgroundColor="#FF4E18" 
                                                        TextColor="White" BorderWidth="1" FontAttributes="Bold" 
                                                        FontSize="Small"
                                                        Clicked="Handle_Yes"></Button>
                                </StackLayout>

                            </StackLayout>
                            <Label Text="Problem description" FontSize="Default" TextColor="Gray" FontAttributes="Bold" Margin="0,5,0,0"></Label>
                            <BoxView BackgroundColor="#999999" HeightRequest="1"></BoxView>
                                <Editor Placeholder="Describe your problem here!"
                                        Completed="DescribeProblemEditorCompleted"
                                        HeightRequest="180"></Editor>
                      </StackLayout>

                                <Button x:Name="qwe "
                                        Text="Next"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        BackgroundColor="#FF4E18"
                                        Margin="0,10,0,10"
                                        HeightRequest="45"
                                        Clicked="Handle_Next"
                                        VerticalOptions="StartAndExpand"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            </ScrollView>

    </ContentPage.Content>
</ContentPage>
