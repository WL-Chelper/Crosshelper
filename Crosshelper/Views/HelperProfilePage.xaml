<?xml version="1.0" encoding="UTF-8"?>
<ContentPage x:Name="HelperProfile" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Crosshelper.Views.HelperProfilePage">
    <NavigationPage.TitleView>
        <Grid>
            <Button Text="Cancel" TextColor="White" HorizontalOptions="End" FontSize="17" Clicked="Handle_Canceled"/>
        </Grid>
    </NavigationPage.TitleView>
        <ScrollView>
            <StackLayout>
            <StackLayout Margin="20,10,20,0">
                <Label Text="Get help touch confirm!"
                       TextColor="#FF4E17"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Start"></Label>
            <Label Text="Helper info" FontSize="16" TextColor="#575656" FontAttributes="Bold" Margin="0,5,0,0"></Label>
            <BoxView BackgroundColor="#999999" HeightRequest="1"></BoxView>
                     <StackLayout Orientation="Horizontal" Margin="0,10,0,0" VerticalOptions="Start">
                        <StackLayout HorizontalOptions="Start">
                            <Image
                                Source=""
                                x:Name="helperImage"
                                Aspect="AspectFill"
                                WidthRequest="80" 
                                HeightRequest="80"/>
            </StackLayout>
            <Grid Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                    <Label BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding HelperName}" Grid.ColumnSpan="3" FontAttributes="Bold" FontSize="20" TextColor="#575656"></Label>
                    <Button  
                        Grid.Row="1"  Grid.ColumnSpan="1"
                        Text="Confirm"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="#FF4E18"
                        Clicked="NHPPConfirm"
                        Margin="0,0,0,0"/>
                </Grid>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                        <Label TextColor="#FFC834" BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding Rating}" FontSize="28"></Label>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                               <Label Text="Language:" FontSize="15" TextColor="#575656"></Label>
                               <Label x:Name="HelperName" Text="" FontSize="15" TextColor="#575656"></Label>
                        </StackLayout>
                        
        
                        <StackLayout>
                            <Label Text="Specialities" FontSize="16" TextColor="#575656" FontAttributes="Bold" Margin="0,10,0,0"></Label>
                            <BoxView BackgroundColor="#999999" HeightRequest="1"></BoxView>
                            <StackLayout Orientation="Horizontal">
                                <Label BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding HelperLanguage}" FontSize="15" TextColor="#575656"></Label>
                            </StackLayout>
                            <Label Text="About myself" FontSize="16" TextColor="#575656" FontAttributes="Bold" Margin="0,10,0,0"></Label>
                            <BoxView BackgroundColor="#999999" HeightRequest="1"></BoxView>
                            <Label FontSize="15" TextColor="#575656"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding HelperBio}"></Label>
                        </StackLayout>
        
                        <StackLayout>
                            <Label Text="Price starting" FontSize="16" TextColor="#575656" FontAttributes="Bold" Margin="0,10,0,0"></Label>
                            <BoxView BackgroundColor="#999999" HeightRequest="1"></BoxView>
                            <StackLayout Orientation="Horizontal">
                                <Label  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding HelperPrice}" FontSize="15" TextColor="#575656"></Label>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout>
                            <Label Text="Reviews" FontSize="16" TextColor="#575656" FontAttributes="Bold" Margin="0,10,0,10"></Label>
                            <BoxView BackgroundColor="#999999" HeightRequest="1"></BoxView>
                            <StackLayout Margin="0,5,0,0">
                                <Label TextColor="#575656"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerName}"  FontAttributes="Bold" FontSize="15"></Label>
                                <Label TextColor="#FFC834"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerRating}" ></Label>
                                <Label TextColor="#575656" FontSize="14"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerContent}" ></Label>
                            </StackLayout>
                            <StackLayout Margin="0,5,0,0">
                                <Label TextColor="#575656"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerName}" FontAttributes="Bold" FontSize="15"></Label>
                                <Label TextColor="#FFC834"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerRating}" ></Label>
                                <Label TextColor="#575656" FontSize="14"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerContent}"></Label>
                            </StackLayout>                            <StackLayout Margin="0,5,0,0">
                                <Label TextColor="#575656"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerName}" x:Name="Name" FontAttributes="Bold" FontSize="15"></Label>
                                <Label TextColor="#FFC834"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerRating}"></Label>
                                <Label TextColor="#575656" FontSize="14"  BindingContext="{x:Reference Name=HelperProfilePage}" Text="{Binding ReviewerContent}"></Label>
                            </StackLayout>
                        </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
</ContentPage>
